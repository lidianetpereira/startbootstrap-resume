        // Page Content
        .container-fluid.p-0

            // About
            section#about.resume-section
                .resume-section-content
                    h1.mb-0
                        | Lidiane
                        span.text-primary Pereira
                    .subheading.mb-5
                        | Juiz de Fora · Brazil · 
                        a(href='mailto:lidiane@lidianepereira.com') lidiane@lidianepereira.com
